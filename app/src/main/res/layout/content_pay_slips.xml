<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <FrameLayout

        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:background="@color/nav_bg">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"

            android:layout_gravity="bottom"
            android:background="@drawable/wave1"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="bottom"
            android:background="@drawable/wave2"

            />


    </FrameLayout>

    <RelativeLayout
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/mainlogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:src="@drawable/main_icon"/>

        <ImageView
            android:id="@+id/nav_toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_gravity="left"
            android:foreground="?android:attr/selectableItemBackground"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:src="@drawable/ic_arrow_back_black_24dp"/>

        <LinearLayout
            android:id="@+id/right_menuw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_marginTop="10dp">


            <FrameLayout
                android:id="@+id/bell_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/bell"/>

                <ImageView
                    android:id="@+id/newnotification"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_gravity="left"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/elipse"/>
            </FrameLayout>

            <LinearLayout
                android:id="@+id/Profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/roundbg">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/reinaldo"/>

                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/group"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/office"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mainlogo"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:background="@drawable/roundbg"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_gravity="center"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/icon"/>

            <TextView
                android:id="@+id/officename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Demo Pen Head Office"
                android:textSize="12dp"
                android:textStyle="bold"/>

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="8dp"
                android:src="@drawable/group"/>
        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/office"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="20dp"
            android:background="@color/white"
            app:cardCornerRadius="15dp"
            app:cardElevation=".6dp"
            app:contentPadding="5dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginEnd="25dp"
                android:layout_marginRight="25dp"
                android:padding="10dp">

                <LinearLayout
                    android:id="@+id/sortbytime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/last_year"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="Last Year"
                        android:textSize="8sp"/>

                    <TextView
                        android:id="@+id/last_month"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="Last Month"
                        android:textSize="8sp"/>

                    <TextView
                        android:id="@+id/all_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="All Time"
                        android:textColor="@color/nav_bg"
                        android:textSize="8sp"
                        android:textStyle="bold"/>


                </LinearLayout>

                <TextView
                    android:id="@+id/Request"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/sortbytime"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:text="Your Total Earning"
                    android:textColor="@color/nav_bg"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/lastclock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/Request"

                    android:layout_marginTop="30dp"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/pettycashimageL"
                    android:text="We thank you for your hard work in our company."
                    android:textSize="10sp"
                    />

                <RelativeLayout
                    android:id="@+id/pettycashimageL"
                    android:layout_width="2dp"
                    android:layout_height="80dp"
                    android:layout_below="@id/sortbytime"

                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@id/Request"
                    android:background="@drawable/grey_bg"
                    android:padding="3dp">


                </RelativeLayout>

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30dp"
                    android:layout_toRightOf="@id/pettycashimageL"
                    android:text="$96,768"
                    android:textColor="#FDC32D"
                    android:textSize="26dp"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:id="@+id/detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lastclock"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <EditText
                        android:id="@+id/title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:hint="Title"
                        android:textSize="12sp"/>

                    <EditText
                        android:id="@+id/amount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:hint="amount"
                        android:textSize="12sp"/>

                    <EditText
                        android:id="@+id/description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:hint="Description"
                        android:textSize="12sp"/>

                    <Spinner
                        android:id="@+id/expense"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/grey_bg"
                        android:padding="5dp"
                        android:popupBackground="@drawable/grey_bg"
                        />

                    <Spinner
                        android:id="@+id/expense_type"
                        android:layout_width="fill_parent"

                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/grey_bg"
                        android:padding="5dp"

                        android:popupBackground="@drawable/grey_bg"
                        />

                    <Spinner
                        android:id="@+id/payment_method"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/grey_bg"
                        android:padding="5dp"
                        android:popupBackground="@drawable/grey_bg"
                        />


                </LinearLayout>


            </RelativeLayout>


        </com.google.android.material.card.MaterialCardView>


    </RelativeLayout>

    <TextView
        android:id="@+id/history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/topbar"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/sf"
        android:text="Payslips History"
        android:textColor="@color/black"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/NewSlips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/history"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/sf"
        android:text="New slips"
        android:textColor="@color/nav_bg"
        android:textSize="12sp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/NewSlips"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="30dp"/>
</RelativeLayout>